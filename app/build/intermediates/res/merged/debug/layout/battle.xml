<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_battle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blueprint" >
	    
	<RelativeLayout
	   	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true" >
    	
		<org.cheeseandbacon.bitbeast.ImageViewUs
			android:id="@+id/battle_image_us"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" />
	   
	    <TextView
	        android:id="@+id/battle_text_us"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|center_horizontal"
	        android:paddingTop="24dp"
			android:textSize="16dp"
	        android:textColor="@color/font"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/battle_image_us" />
	    
	    <ImageView
	        android:id="@+id/battle_image_stars_us"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/stars" />
    
    </RelativeLayout>
    
	<RelativeLayout
	   	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true" >
    
	    <org.cheeseandbacon.bitbeast.ImageViewThem
	        android:id="@+id/battle_image_them"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" />
	   
	    <TextView
	        android:id="@+id/battle_text_them"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|center_horizontal"
	        android:paddingTop="24dp"
			android:textSize="16dp"
	        android:textColor="@color/font"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/battle_image_them" />
	    
	    <ImageView
	        android:id="@+id/battle_image_stars_them"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/stars" />
    
    </RelativeLayout>
    
	<TextView
       	android:id="@+id/battle_text_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:textSize="28dp"
        android:textColor="@color/font"
        android:gravity="center_horizontal"
        android:paddingTop="24dp" />
	
	<TextView
       	android:id="@+id/battle_text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:textSize="28dp"
        android:textColor="@color/font"
        android:gravity="center_horizontal"
        android:paddingTop="24dp" />
	
	<Button
       	android:id="@+id/battle_button_replay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/battle_button_replay"
		android:textSize="28dp"
        android:textColor="@color/font"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@layout/button"
        android:onClick="button_replay" />

</RelativeLayout>
