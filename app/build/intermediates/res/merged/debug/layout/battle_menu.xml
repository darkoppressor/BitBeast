<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_battle_menu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blueprint" >
    
    <TextView
        android:id="@+id/text_battle_menu_transmitting"
        android:textSize="24dp"
	    android:textColor="@color/font"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/battle_menu_transmitting" />
    
    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
	    <Button
	        android:id="@+id/button_battle_menu_scan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="button_scan"
	        android:text="@string/button_battle_menu_scan"
	        android:textSize="20dp"
	        android:textColor="@color/font"
	        android:background="@layout/button" />
	    
	    <Button
	        android:id="@+id/button_battle_menu_make_discoverable"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="button_make_discoverable"
	        android:text="@string/button_battle_menu_make_discoverable"
	        android:textSize="20dp"
	        android:textColor="@color/font"
	        android:background="@layout/button" />
	    
    </LinearLayout>
    
    <TextView
        android:id="@+id/text_battle_menu_available_devices"
        android:textSize="24dp"
	    android:textColor="@color/font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/battle_menu_available_devices" />
    
    <ListView
	    android:id="@+id/list_view_battle_menu"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

</LinearLayout>
