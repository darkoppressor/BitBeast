<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_game_speed_gps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blueprint" >
    
    <LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
        <TextView
		    android:id="@+id/text_game_speed_gps_notice_off"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical|center_horizontal"
		    android:textSize="24dp"
		    android:textColor="@color/font_alert"
		    android:padding="6dp" />
	    
	    <TextView
		    android:id="@+id/text_game_speed_gps_notice_accuracy"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical|center_horizontal"
		    android:textSize="24dp"
		    android:textColor="@color/font_alert"
		    android:padding="6dp" />
	    
	    <TextView
		    android:id="@+id/text_game_speed_gps_bits_this_session"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical|center_horizontal"
		    android:textSize="24dp"
		    android:textColor="@color/font"
		    android:padding="6dp" />
	    
	    <TextView
		    android:id="@+id/text_game_speed_gps_weight_loss_this_session"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical|center_horizontal"
		    android:textSize="24dp"
		    android:textColor="@color/font"
		    android:padding="6dp" />
	    
	    <TextView
		    android:id="@+id/text_game_speed_gps_speed"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical|center_horizontal"
		    android:textSize="24dp"
		    android:textColor="@color/font"
		    android:padding="6dp" />
	    
	    <TextView
		    android:id="@+id/text_game_speed_gps_accuracy"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical|center_horizontal"
		    android:textSize="24dp"
		    android:textColor="@color/font"
		    android:padding="6dp" />
	    
	</LinearLayout>

</ScrollView>
