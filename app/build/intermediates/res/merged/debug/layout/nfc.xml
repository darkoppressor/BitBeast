<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_nfc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blueprint" >
    
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
	    <TextView
	        android:id="@+id/nfc_test"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="@string/name_nfc"
			android:textSize="24dp"
	        android:textColor="@color/font" />
	    
	    <Button
	        android:id="@+id/button_nfc_send"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center_vertical|center_horizontal"
	        android:onClick="button_send"
	        android:text="@string/button_nfc_send"
	        android:textSize="24dp"
	        android:textColor="@color/font"
	        android:background="@layout/button" />
	
	</LinearLayout>

</ScrollView>
