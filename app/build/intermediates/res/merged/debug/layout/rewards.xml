<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_rewards"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_blueprint" >
	
    <LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
	    <TextView
	        android:id="@+id/rewards_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|center_horizontal"
			android:textSize="20dp"
	        android:textColor="@color/font" />
		    
        <TextView
	        android:id="@+id/rewards_text_item"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="@string/button_text_item_get"
			android:textSize="20dp"
	        android:textColor="@color/font"
	        android:paddingTop="12dp" />
    
	    <Button
	        android:id="@+id/button_rewards_item"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="20dp"
			android:textColor="@color/font"
			android:background="@layout/button"
			android:gravity="center_vertical|center_horizontal"
			android:onClick="button_item" />
	    
	    <Button
	        android:id="@+id/button_rewards_spend"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/button_text_spend"
			android:textSize="20dp"
			android:textColor="@color/font"
			android:background="@layout/button"
			android:gravity="center_vertical|center_horizontal"
			android:onClick="button_spend" />
	    
	    <Button
	        android:id="@+id/button_rewards_ok"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@android:string/ok"
			android:textSize="20dp"
			android:textColor="@color/font"
			android:background="@layout/button"
			android:gravity="center_vertical|center_horizontal"
			android:onClick="button_ok" />
	    
	</LinearLayout>
    
</ScrollView>
