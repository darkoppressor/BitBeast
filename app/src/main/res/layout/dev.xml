<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_dev"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blueprint" >
    
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:padding="6dp">

		<Button
            android:id="@+id/button_dev_restore_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="20sp"
            android:textColor="@color/font"
            android:background="@layout/button"
            android:text="@string/dev_energy"
            android:onClick="pressRestoreEnergy" />
	    
	    <TextView
	        android:id="@+id/text_dev_data"
	        android:textSize="20sp"
	        android:textColor="@color/font"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="6dp" />

	</LinearLayout>

</ScrollView>
