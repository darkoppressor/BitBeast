<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient android:startColor="@color/status_bar_background" android:centerColor="@color/status_bar_background"
                android:centerY="0.75" android:endColor="@color/status_bar_background" android:angle="90" />
            <stroke android:width="1dp" android:color="@color/status_bar_border" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="@color/status_winloss" android:endColor="@color/status_winloss"
                    android:angle="90" />
                <stroke android:width="2dp" android:color="@color/status_bar_border" android:dashGap="2dp" android:dashWidth="4dp" />
            </shape>
        </clip>
    </item>
</layer-list>
