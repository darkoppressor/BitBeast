<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item
	    android:state_pressed="false"
	    android:state_focused="true" >
	    <shape>
	        <corners android:radius="12dip" />
	        <solid android:color="@color/button_2" />
	        <stroke android:width="2dp" android:color="@color/button_border" android:dashGap="2dp" android:dashWidth="4dp" />
	        <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
	    </shape>
	</item>
	
	<item
	    android:state_pressed="true"
	    android:state_focused="true" >
	    <shape>
	        <corners android:radius="12dip" />
	        <solid android:color="@color/button_border" />
	        <stroke android:width="2dp" android:color="@color/button_2" android:dashGap="2dp" android:dashWidth="4dp" />
	        <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
	    </shape>
	</item>
	
	<item
	    android:state_pressed="true"
	    android:state_focused="false" >
	    <shape>
	        <corners android:radius="12dip" />
	        <solid android:color="@color/button_border" />
	        <stroke android:width="2dp" android:color="@color/button_1" android:dashGap="2dp" android:dashWidth="4dp" />
	        <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
	    </shape>
	</item>
	
	<item
	    android:state_pressed="false"
	    android:state_focused="false" >
	    <shape>
	        <corners android:radius="12dip" />
	        <solid android:color="@color/button_1" />
	        <stroke android:width="2dp" android:color="@color/button_border" android:dashGap="2dp" android:dashWidth="4dp" />
	        <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
	    </shape>
	</item>

</selector>
