<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_game_rps"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@drawable/background_blueprint" >
    
    <FrameLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:foreground="@drawable/rps_rock"
	    android:foregroundGravity="center"
	    android:layout_weight="1" >
	    <Button
	        android:id="@+id/button_game_rps_rock"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@layout/button"
	        android:onClick="button_rock" />
    </FrameLayout>
    
    <FrameLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:foreground="@drawable/rps_paper"
	    android:foregroundGravity="center"
	    android:layout_weight="1" >
	    <Button
	        android:id="@+id/button_game_rps_paper"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@layout/button"
	        android:onClick="button_paper" />
    </FrameLayout>
    
    <FrameLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:foreground="@drawable/rps_scissors"
	    android:foregroundGravity="center"
	    android:layout_weight="1" >
	    <Button
	        android:id="@+id/button_game_rps_scissors"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@layout/button"
	        android:onClick="button_scissors" />
    </FrameLayout>

</LinearLayout>
