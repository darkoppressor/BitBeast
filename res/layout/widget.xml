<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/widget_margin" >
	
    <Button
        android:id="@+id/button_widget_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent" />
    
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/widget_background_blueprint" >
		
	    <ImageView
	        android:id="@+id/image_widget_pet"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|center_horizontal"
	        android:padding="3dp" />
	    
	    <Button
	        android:id="@+id/button_widget_game"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/widget_button_game"
	        android:gravity="center_vertical|center_horizontal"
	        android:textSize="16sp"
	        android:textColor="@color/font"
	        android:background="@layout/button" />
	
	    <TextView
	        android:id="@+id/text_widget_name"
	        android:textSize="16sp"
	        android:textColor="@color/font"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|center_horizontal" />
	    
	    <TextView
	        android:id="@+id/text_widget_level"
	        android:textSize="16sp"
	        android:textColor="@color/font"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical|center_horizontal" />
	    
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp" >
		    <TextView
		        android:id="@+id/text_widget_title_happy"
		        android:textSize="16sp"
		        android:textColor="@color/font"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		    <ProgressBar
		        android:id="@+id/bar_widget_happy"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:minHeight="12dp"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:progressDrawable="@drawable/bar_happy" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp" >
		    <TextView
		        android:id="@+id/text_widget_title_temp"
		        android:textSize="16sp"
		        android:textColor="@color/font"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
	    
		    <ProgressBar
		        android:id="@+id/bar_widget_temp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:minHeight="12dp"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:progressDrawable="@drawable/bar_temp" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp" >
		    <TextView
		        android:id="@+id/text_widget_title_hunger"
		        android:textSize="16sp"
		        android:textColor="@color/font"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		    <ProgressBar
		        android:id="@+id/bar_widget_hunger"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:minHeight="12dp"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:progressDrawable="@drawable/bar_hunger" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp" >
		    <TextView
		        android:id="@+id/text_widget_title_thirst"
		        android:textSize="16sp"
		        android:textColor="@color/font"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		    <ProgressBar
		        android:id="@+id/bar_widget_thirst"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:minHeight="12dp"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:progressDrawable="@drawable/bar_thirst" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp" >
		    <TextView
		        android:id="@+id/text_widget_title_strength"
		        android:textSize="16sp"
		        android:textColor="@color/font"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		    <ProgressBar
		        android:id="@+id/bar_widget_strength"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:minHeight="12dp"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:progressDrawable="@drawable/bar_strength" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp" >
		    <TextView
		        android:id="@+id/text_widget_title_dexterity"
		        android:textSize="16sp"
		        android:textColor="@color/font"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		    <ProgressBar
		        android:id="@+id/bar_widget_dexterity"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:minHeight="12dp"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:progressDrawable="@drawable/bar_dexterity" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp" >
		    <TextView
		        android:id="@+id/text_widget_title_stamina"
		        android:textSize="16sp"
		        android:textColor="@color/font"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		    <ProgressBar
		        android:id="@+id/bar_widget_stamina"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:minHeight="12dp"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:progressDrawable="@drawable/bar_stamina" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp" >
		    <TextView
		        android:id="@+id/text_widget_title_energy"
		        android:textSize="16sp"
		        android:textColor="@color/font"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		    <ProgressBar
		        android:id="@+id/bar_widget_energy"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:minHeight="12dp"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:progressDrawable="@drawable/bar_energy" />
	    </LinearLayout>
	
	</LinearLayout>

</RelativeLayout>
